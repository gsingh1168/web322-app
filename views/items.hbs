<div class="row">
    <div class="col-md-12">
        <h2><a href="/Items/add" class="btn btn-success pull-right">Add Item</a></h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Published</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{#formatDate postDate}}{{/formatDate}}</td>
                        <td>$ {{price}}</td>
                        <td><a href="/items?category={{category}}">{{category}}</a></td>
                        <td>{{published}}</td>
                        <td>
                            <form action="/Items/delete/{{id}}" method="GET">
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-md-12 text-center">
            {{#unless items}}
                <strong>{{message}}</strong>
            {{/unless}}
        </div>
    </div>
</div>
